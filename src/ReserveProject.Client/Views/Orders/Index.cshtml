@model ReserveProject.Client.Models.ReservationsViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Reservations</h1>
        <p class="lead">Down below you can see all reservations in the system.</p>
    </div>
    @foreach (var r in Model.Reservations.Reservations)
    {
        <div class="my-3 p-3 bg-white rounded box-shadow">
            <h6 class="border-bottom border-gray pb-2 mb-0">@r.PaidAmount</h6>
        </div>
    }
</div>
